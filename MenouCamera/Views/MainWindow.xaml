<Window
    x:Class="MenouCamera.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Menou Camera"
    Width="1080"
    Height="720"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <DockPanel>

        <!-- 上部の操作バー -->
        <StackPanel
            Margin="8"
            DockPanel.Dock="Top"
            Orientation="Horizontal"
            VerticalAlignment="Center">
            <Button
                Margin="0,0,8,0"
                Padding="12,6"
                Command="{Binding CaptureCommand}"
                Content="撮像" />
            <Button
                Margin="0,0,8,0"
                Padding="12,6"
                Command="{Binding SaveCommand}"
                Content="保存" />

            <!-- ライブ操作 -->
            <Separator Width="12" />
            <Button
                Margin="0,0,8,0"
                Padding="12,6"
                Command="{Binding StartLiveCommand}"
                Content="ライブ開始" />
            <Button
                Margin="0,0,8,0"
                Padding="12,6"
                Command="{Binding StopLiveCommand}"
                Content="停止" />

            <!-- 計測 -->
            <Separator Width="12" />
            <Button
                Margin="0,0,8,0"
                Padding="12,6"
                Command="{Binding MeasureLiveFpsWindowCommand}"
                Content="5–35秒FPS計測 (CSV)" />
            <Button
                Margin="0,0,8,0"
                Padding="12,6"
                Command="{Binding MeasureLiveFpsBatchCommand}"
                Content="一括計測 (PF×角度×FPS)" />

            <TextBlock
                Margin="12,0,0,0"
                VerticalAlignment="Center"
                Foreground="#444"
                Text="{Binding LiveFps, StringFormat=FPS: {0:F1}}" />
        </StackPanel>

        <!-- 設定エリア -->
        <Border
            DockPanel.Dock="Top"
            Margin="8,0,8,8"
            Padding="8"
            BorderBrush="#DDD"
            BorderThickness="1"
            CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <!-- 解像度／FPS -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                    <TextBlock Text="幅:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBox Width="64" Text="{Binding CaptureWidth, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Text=" 高さ:" VerticalAlignment="Center" Margin="8,0,4,0"/>
                    <TextBox Width="64" Text="{Binding CaptureHeight, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Text=" FPS:" VerticalAlignment="Center" Margin="8,0,4,0"/>
                    <TextBox Width="64" Text="{Binding CaptureFps, StringFormat=F0, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!-- ピクセルフォーマット(FourCC) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                    <TextBlock Text="PixelFormat:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <ComboBox
                        Width="120"
                        IsEditable="True"
                        Text="{Binding LivePixelFormatFourCC, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBoxItem Content="MJPG" />
                        <ComboBoxItem Content="YUY2" />
                        <ComboBoxItem Content="NV12" />
                        <ComboBoxItem Content="" />
                    </ComboBox>
                </StackPanel>

                <!-- 回転角／反転 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                    <TextBlock Text="回転:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <ComboBox
                        Width="80"
                        SelectedValue="{Binding LiveRotateAngle, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBoxItem Content="0" />
                        <ComboBoxItem Content="90" />
                        <ComboBoxItem Content="180" />
                        <ComboBoxItem Content="270" />
                    </ComboBox>
                    <CheckBox Content="水平反転" Margin="8,0,0,0" IsChecked="{Binding LiveFlipHorizontal}" />
                    <CheckBox Content="垂直反転" Margin="8,0,0,0" IsChecked="{Binding LiveFlipVertical}" />
                </StackPanel>

                <!-- BGR変換／出力先 -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                    <CheckBox Content="BGRへ変換(OpenCV)" IsChecked="{Binding LiveConvertRgb}" />
                </StackPanel>

                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="出力フォルダ:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBox
                        Width="240"
                        Text="{Binding MeasureOutputFolder, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- 本体 -->
        <Grid Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- プレビュー -->
            <Border
                Grid.Column="0"
                Margin="0,0,8,0"
                Padding="6"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="4">
                <Grid>
                    <!-- ライブ時 -->
                    <Image
                        Source="{Binding LiveBitmap}"
                        Stretch="Uniform"
                        Visibility="{Binding IsLive, Converter={StaticResource BoolToVis}}" />

                    <!-- 非ライブ時：選択画像 -->
                    <Image Source="{Binding Selected.FullImage}" Stretch="Uniform">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLive}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Grid>
            </Border>

            <!-- 履歴 -->
            <Border
                Grid.Column="1"
                Padding="4"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="4">
                <ListBox
                    ItemsSource="{Binding History}"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectedItem="{Binding Selected}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4" Orientation="Horizontal">
                                <Image
                                    Width="96"
                                    Height="72"
                                    Margin="0,0,8,0"
                                    Source="{Binding Thumbnail}"
                                    Stretch="UniformToFill" />
                                <StackPanel>
                                    <TextBlock FontWeight="Bold" Text="{Binding Title}" />
                                    <TextBlock Foreground="#666" Text="{Binding CapturedAtText}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>

    </DockPanel>
</Window>
